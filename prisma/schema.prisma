generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Localizacao {
  id          Int      @id @default(autoincrement())
  nome        String
  descricao   String
  bairro      String?
  rua         String?
  latitude    Float
  longitude   Float
  tipoRacismo TipoRacismo @relation(fields: [tipoRacismoId], references: [id])
  tipoRacismoId Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  respostas   Resposta[]

  @@index([tipoRacismoId])
}


model TipoRacismo {
  id          Int      @id @default(autoincrement())
  descricao   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  localizacoes Localizacao[]
  avaliacoes   Avaliacao[]
}

model Resposta {
  id          Int      @id @default(autoincrement())
  comentario  String
  usuario     String
  localizacao  Localizacao @relation(fields: [localizacaoId], references: [id])
  localizacaoId Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([localizacaoId])
}

model Avaliacao {
  id          Int      @id @default(autoincrement())
  usuario     String
  comentario  String
  nota        Int      @default(0)
  tipoRacismo TipoRacismo @relation(fields: [tipoRacismoId], references: [id])
  tipoRacismoId Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tipoRacismoId])
}

model Denuncia {
  id          Int      @id @default(autoincrement())
  descricao   String
  localizacao String
  data        DateTime @default(now())
}